/* WEAPONS */
/* Locust */
"weapon.name.boomshot" = "Lance-grenades Boomshot";
"weapon.description.boomshot" = "Était un lance-grenades à pompe à un seul tir, conçu et utilisé principalement par les Locustes, en particulier les Boomers.";

"weapon.name.hammerburstii" = "Hammerburst II";
"weapon.description.hammerburstii" = "Était le fusil d'assaut standard des Locustes, à haute puissance. Il est souvent appelé le pendant des Locustes au fusil d'assaut Lancer des COG.";

"weapon.name.mulcher" = "Mulcher";
"weapon.description.mulcher" = "Le Mulcher est une mitrailleuse rotative à manivelle lourde, développée par la Coalition des Gouvernements Ordonnés.";

"weapon.name.bolo_grenade" = "Grenade Bolo";
"weapon.description.bolo_grenade" = "La Grenade Bolo, également connue sous le nom de Grenade à fragmentation, était la grenade à fragmentation standard utilisée par la Coalition des Gouvernements Ordonnés, la Horde Locuste et le Swarm.";

"weapon.name.boltok" = "Pistolet Boltok";
"weapon.description.boltok" = "Était l'arme de poing standard des Locustes, spécifiquement des Drones. Le pistolet suit la philosophie de conception des armes des Locustes, qui consiste à créer des armes axées sur la force brute.";

/* Cgo */
"weapon.name.lancer" = "Fusil d'assaut Lancer Mark 1";
"weapon.description.lancer" = "Surnommé le Retro Lancer pendant la pandémie Lambent, était le prédécesseur du Fusil d'assaut Lancer Mark 2. Anciennement le fusil d'assaut principal de l'Armée de la Coalition des Gouvernements Ordonnés, le Fusil d'assaut Mark 1 a été utilisé tout au long de la Guerre des Pendulums.";

"weapon.name.lancer2" = "Fusil d'assaut Lancer Mark 2";
"weapon.description.lancer2" = "Une mise à jour du Fusil d'assaut Lancer Mark 1, produit avec une baïonnette à tronçonneuse, une précision améliorée, moins de recul et une capacité de munitions plus grande, mais avec moins de puissance de feu comparé à son prédécesseur.";

"weapon.name.sniper" = "Fusil de sniper Longshot";
"weapon.description.sniper" = "Était un fusil de sniper à action à verrou, de calibre élevé, à un seul tir. Créé par la Coalition des Gouvernements Ordonnés pendant les Guerres Pendulums, le Longshot a été utilisé même dix-sept ans après le Jour de l'Émergence.";

"weapon.name.hammer_of_dawn" = "Marteau de l'Aube";
"weapon.description.hammer_of_dawn" = "Le Marteau de l'Aube était un laser orbital, alimenté par Imulsion, de la COG. Ses composants clés ont été inventés par le scientifique de l'UIR Mauris Ivo et terminés par le professeur Adam Fenix après avoir été volés lors de l'opération : Leveler.";

"weapon.name.mx8" = "Pistolet PMX8";
"weapon.description.mx8" = "Était l'arme de poing standard pour le personnel des forces armées de la Coalition des Gouvernements Ordonnés";


/* Characters */

"character.name.marcus_fenix" = "Marcus Fenix";
"character.description.marcus_fenix" = "Le leader des Gears et héros de la guerre contre les Locustes. Marcus est un soldat endurci, déterminé et dévoué à sauver l'humanité.";

"character.name.dom_santiago" = "Dominic Santiago";
"character.description.dom_santiago" = "Le fidèle compagnon de Marcus, un soldat courageux avec un grand cœur. Il lutte pour la famille et la survie de l'humanité, tout en portant le poids de la perte de sa femme.";

"character.name.kait_diaz" = "Kait Diaz";
"character.description.kait_diaz" = "Un membre important des Gears, Kait a des liens familiaux profonds avec les Locustes. Elle est forte, résolue et prête à tout pour protéger ses proches.";

"character.name.jd_fenix" = "JD Fenix";
"character.description.jd_fenix" = "Fils de Marcus Fenix, JD suit les traces de son père dans la lutte contre les menaces qui pèsent sur l'humanité. Son courage et sa loyauté font de lui un leader né.";

"character.name.swarm_hunter" = "Swarm Hunter";
"character.description.swarm_hunter" = "Les chasseurs du Swarm sont des ennemis rapides et furtifs, spécialisés dans l'embuscade et l'attaque surprise. Leur agilité les rend redoutables sur le champ de bataille.";

"character.name.jace_stroud" = "Jace Stroud";
"character.description.jace_stroud" = "Un membre clé des Gears, Jace Stroud est un ancien soldat qui est devenu une partie vitale des efforts de la COG pour combattre le Swarm. Il est courageux, ingénieux et toujours prêt à se battre pour l'humanité.";

"character.name.anya_stroud" = "Anya Stroud";
"character.description.anya_stroud" = "Ancienne soldat de la COG et membre crucial du commandement des Gears, Anya Stroud est connue pour son intelligence, sa détermination et son leadership. Elle joue un rôle clé dans la stratégie et guide les Gears vers la victoire.";

